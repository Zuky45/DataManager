
<Window x:Class="DataManager.Visualization.ClearOption"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Clear Options" Height="250" Width="300">
   <Grid>
       <TextBlock Text="Select an option to clear:" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top" 
                  Margin="0,10,0,0" 
                  FontSize="16" 
                  FontWeight="Bold"/>

       <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">
           <Button Content="Clear Data" Width="150" Height="40" Margin="0,5,0,5" Click="ClearData_Click"/>
           <Button Content="Clear Model" Width="150" Height="40" Margin="0,5,0,5" Click="ClearModel_Click"/>
           <Button Content="Clear Both" Width="150" Height="40" Margin="0,5,0,5" Click="ClearBoth_Click"/>
       </StackPanel>
   </Grid>
</Window>

