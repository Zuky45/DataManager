<Window x:Class="DataManager.Visualization.ExportToFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManager.Visualization"
        mc:Ignorable="d"
        Title="Export Data" Height="600" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Export Data" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- File Configuration Section -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                       Text="File Information" 
                       FontWeight="SemiBold" 
                       Margin="0,10,0,5"/>

            <!-- File Name -->
            <TextBlock Grid.Row="1" Grid.Column="0" 
                       Text="File Name:" 
                       VerticalAlignment="Center" 
                       Margin="0,5,10,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                     Name="FileNameTextBox" 
                     Margin="0,5"/>

            <!-- File Format -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Format:" 
                       VerticalAlignment="Center" 
                       Margin="0,5,10,5"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                      Name="FormatComboBox" 
                      SelectedIndex="0"
                      Margin="0,5">
                <ComboBoxItem Content="CSV (.csv)"/>
                <ComboBoxItem Content="Text (.txt)"/>
            </ComboBox>

            <!-- File Location -->
            <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="File Location:" 
                       VerticalAlignment="Center" 
                       Margin="0,5,10,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" 
                     Name="LocationTextBox" 
                     IsReadOnly="True" 
                     Margin="0,5"/>
            <Button Grid.Row="3" Grid.Column="2" 
                    Content="Browse..." 
                    Padding="10,0" 
                    Margin="10,5,0,5" 
                    Name="BrowseButton" 
                    Click="BrowseButton_Click"/>

            <!-- Data Configuration Section -->
            <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                       Text="Data Information" 
                       FontWeight="SemiBold" 
                       Margin="0,20,0,5"/>

            <!-- Data Source -->
            <TextBlock Grid.Row="5" Grid.Column="0" 
                       Text="Data Source:" 
                       VerticalAlignment="Center" 
                       Margin="0,5,10,5"/>
            <ComboBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" 
                      Name="DataSourceComboBox" 
                      SelectionChanged="DataSourceComboBox_SelectionChanged"
                      Margin="0,5"/>

            <!-- Data Name -->
            <TextBlock Grid.Row="6" Grid.Column="0" 
                       Text="Data Name:" 
                       VerticalAlignment="Center" 
                       Margin="0,5,10,5"/>
            <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" 
                     Name="DataNameTextBox" 
                     IsReadOnly="False" 
                     Margin="0,5"/>

            <!-- Data Description -->
            <TextBlock Grid.Row="7" Grid.Column="0" 
                       Text="Description:" 
                       VerticalAlignment="Top" 
                       Margin="0,8,10,5"/>
            <TextBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" 
                     Name="DescriptionTextBox"
                     TextWrapping="Wrap" 
                     AcceptsReturn="True" 
                     Height="60" 
                     Margin="0,5"/>

            <!-- Export Options -->
            <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,15,0,0">
                <TextBlock Text="Export Options" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>

                <CheckBox Content="Include Description" 
                          Name="IncludeDescriptionCheckBox" 
                          IsChecked="True" 
                          Margin="5,5,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Start Index:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <TextBox Name="StartIndexTextBox" 
                             Width="50" 
                             Text="1" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Button Section -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Name="StatusTextBlock" 
                       VerticalAlignment="Center" 
                       Foreground="Gray"/>

            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Width="100" 
                    Margin="0,0,10,0" 
                    Name="CancelButton" 
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2" 
                    Content="Export" 
                    Width="100" 
                    Name="ExportButton" 
                    Click="ExportButton_Click"
                    Background="#2C3E50" 
                    Foreground="White"/>
        </Grid>
    </Grid>
</Window>





