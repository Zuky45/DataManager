<Window x:Class="DataManager.Visualization.LoadFromDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataManager.Visualization"
        mc:Ignorable="d"
        Title="Load Data from Database" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Load Data from Database" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Dataset Selection -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Select Dataset:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"/>

                <ComboBox Grid.Column="1" 
                          Name="DatasetComboBox"
                          Margin="0,0,10,0"
                          SelectionChanged="DatasetComboBox_SelectionChanged"/>

                <Button Grid.Column="2" 
                        Content="Refresh" 
                        Padding="10,3"
                        Click="RefreshButton_Click"/>
            </Grid>

            <!-- Selected Dataset Details -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Dataset Details" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>

                <Border Grid.Row="1" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        Padding="10"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Name="SelectedDatasetNameTextBlock" 
                                   Text="No dataset selected" 
                                   FontWeight="SemiBold"/>

                        <TextBlock Name="SelectedDatasetDescriptionTextBlock" 
                                   Text="Select a dataset from the dropdown to view details"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0"/>

                        <TextBlock Name="SelectedDatasetRecordsTextBlock" 
                                   Text="Records: 0"
                                   Margin="0,5,0,0"/>

                        <TextBlock Name="SelectedDatasetCreatedTextBlock" 
                                   Text="Created: N/A"
                                   Margin="0,5,0,0"/>
                        <TextBlock Name="SelectedDatasetModifiedTextBlock" 
                                   Text="Modified: N/A"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <GroupBox Grid.Row="2" Header="Dataset Preview">
                    <DataGrid Name="DataPreviewGrid" 
                              IsReadOnly="True"
                              AutoGenerateColumns="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="#F5F5F5"/>
                </GroupBox>
            </Grid>

            <!-- Status Bar -->
            <TextBlock Grid.Row="2" 
                       Name="StatusTextBlock" 
                       Text="Ready to load data" 
                       Foreground="Gray"
                       Margin="0,10,0,0"/>
        </Grid>

        <!-- Button Section -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Width="100" 
                    Margin="0,0,10,0" 
                    Click="CancelButton_Click"/>

            <Button Grid.Column="2" 
                    Content="Load Dataset" 
                    Width="120" 
                    IsEnabled="False"
                    Name="LoadButton"
                    Click="LoadButton_Click"
                    Background="#2C3E50" 
                    Foreground="White"/>
        </Grid>
    </Grid>
</Window>
